<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Approved</th>
      <th scope="col">Author name</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= article.approved %></td>
        <td><%= article.account.name %></td>
        <td type="button" class="btn btn-primary"><%= link_to 'Show', article %></td>
        <% if current_account.is_admin == true %>
          <td type="button" class="btn btn-primary"><%= link_to 'Approve', edit_article_path(article) %></td>
          <td type="button" class="btn btn-primary"><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

